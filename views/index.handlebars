<div class="container">
  <br>

  <div>

    <h1>Burgers!</h1>

    <br>

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="devour">Are You Hungry?</label><input type="text" id="burger" name="name"><br>
        <input type="radio" name="devour" value="0"> Lets Feast
        <input type="radio" name="devour" value="1" checked> Eaten<br>
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>

  <br><br>

  <div class="row">
    <div class="col-6">
      <h2>NEED TO EAT!</h2>

      <ul class="need-to-eat">
        {{#each burgers}}
          {{#unless devour}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-6">
      <h2>HAVE EATEN.</h2>

      <ul class="have-eaten">
        {{#each burgers}}
          {{#if devour}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>